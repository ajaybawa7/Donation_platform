<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-KEY.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">CharityHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/campaigns">View Campaigns</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/donations/history">My Donations</a>
                    </li>
                    <% if (user.role !== 'donor') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/campaigns/create">Create Campaign</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/donations/admin/all">All Donations</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger text-white px-3" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <div class="card shadow-lg p-4 rounded">
            <h2 class="mb-3">Welcome, <%= user.name %>!</h2>
            <p class="text-muted"><strong><%= user.role %></strong></p>

            <div class="d-flex flex-wrap justify-content-center mt-4">
                <% if (user.role !== 'donor') { %>
                    <a href="/campaigns/create" class="btn btn-primary m-2">
                        <i class="fas fa-plus-circle"></i> Create Campaign
                    </a>
                <% } %>
                <a href="/campaigns" class="btn btn-success m-2">
                    <i class="fas fa-eye"></i> View Campaigns
                </a>
                <a href="/donations/history" class="btn btn-info m-2">
                    <i class="fas fa-hand-holding-heart"></i> My Donations
                </a>
                <% if (user.role !== 'donor') { %>
                    <a href="/donations/admin/all" class="btn btn-warning m-2">
                        <i class="fas fa-list"></i> All Donations
                    </a>
                <% } %>
                <a href="/auth/logout" class="btn btn-danger m-2">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p class="mb-0">Â© 2025 Donation Hub | Making the world a better place</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
